<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<h1 class="text-center text-primary"> Álbuns de Metal</h1>
<p class="text-center">Os maiores Hits do Metal estão a sua disposição!</p>

<table class="table table-striped mt-4">
  <thead class="table-dark">
    <tr>
      <th>Título</th>
      <th>Artista</th>
      <th>Ano</th>
    </tr>
  </thead>
  <tbody>
    <% albums.forEach(album => { %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.artist %></td>
        <td><%= album.ano %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
